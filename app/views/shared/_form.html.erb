<%= simple_form_for user, url: manager_users_path, method: :post do |f|%>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :password unless current_user.manager? %>
  <%= f.input :phone_number %>
  <%= f.input :role, collection: User.roles.keys if current_user.manager? %>
  <%= f.submit %>
<% end %>
