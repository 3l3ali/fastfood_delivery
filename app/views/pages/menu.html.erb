<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-3">
      <ul id="list-home-page" class="menu-links">
        <li>
          <%= link_to menu_pages_path(category: "burgers"), method: :get do %>
            <%= image_tag "burger.jpg" %>
          <% end %>
        </li>
        <li>
          <%= link_to menu_pages_path(category: "chicken_sandwiches") do %>
            <%= image_tag "chicken.jpg" %>
          <% end %>
        </li>
        <li>
          <%= link_to menu_pages_path(category: "sides") do %>
            <%= image_tag "sides.jpg" %>
          <% end %>
        </li>
        <li>
          <%= link_to menu_pages_path(category: "drinks") do %>
            <%= image_tag "drinks.jpg" %>
          <% end %>
        </li>
        <li>
          <%= link_to menu_pages_path(category: "shakes") do %>
            <%= image_tag "shakes.jpg" %>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="items">
        <% @items.each do |item| %>
          <div class="col-md-6">
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/xxxxxx.jpeg');">
              <div class="card-description">
                <h3><%= item.name %></h3>
              </div>
              <div class="card-price">

                <h2><%= item.price %></h2>

                <!-- THIS IS THE CART ICON -->
                <%= link_to cart_path(item_id: item.id, category: params[:category]), method: :post do %>
                  <%= image_tag "http://placehold.it/30/30", class: "cart" %>
                <% end %>

              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-md-3">
      <div class="card"style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/xxxxxx.jpeg');">
        <div class="card-description">
          <h3>Ordering List</h3>
        </div>
        <div class="item_price_list">
          <% @items_list.each do |item| %>
            <%= item.first %>: <%= item[1][:count] %> <%= link_to "remove", remove_item_path(item_id: item[1][:id], category: params[:category]), method: :post %><br>
          <% end %>
          <%= link_to "Clear cart", clear_cart_path(category: params[:category]), method: :put  %>
          <h3>Total: <%= @bill %></h3>
          <%= link_to "Proceed", new_user_order_path(current_user), class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>





